{
  "name": "@nxpkmn/mods",
  "version": "0.6.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": "./build/index.js",
    "./gen1jpn": "./build/gen1jpn/index.js",
    "./gen1stadium": "./build/gen1stadium/index.js",
    "./gen2stadium2": "./build/gen2stadium2/index.js",
    "./gen4pt": "./build/gen4pt/index.js",
    "./gen5bw1": "./build/gen5bw1/index.js",
    "./gen6xy": "./build/gen6xy/index.js",
    "./gen7letsgo": "./build/gen7letsgo/index.js",
    "./gen7sm": "./build/gen7sm/index.js",
    "./gen8bdsp": "./build/gen8bdsp/index.js",
    "./gen8dlc1": "./build/gen8dlc1/index.js"
  },
  "description": "Support for non-standard mods to @nxpkmn/sim and @nxpkmn/dex",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xerxicodex/ps.git"
  },
  "author": "Guangcong Luo <guangcongluo@gmail.com> (http://guangcongluo.com)",
  "contributors": [
    "Cathy J. Fitzpatrick <cathy@cathyjf.com> (https://cathyjf.com)",
    "Bill Meltsner <bill@meltsner.com> (http://www.meltsner.com)"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build",
    "!build/*.test.*",
    "src",
    "!src/*.test.*"
  ],
  "dependencies": {
    "@nxpkmn/dex-types": "https://gitpkg.now.sh/xerxicodex/ps/dex/types"
  },
  "devDependencies": {
    "@nxpkmn/dex": "https://gitpkg.now.sh/xerxicodex/ps/dex",
    "@nxpkmn/sim": "https://gitpkg.now.sh/xerxicodex/ps/sim"
  },
  "scripts": {
    "lint": "eslint --cache src --ext ts",
    "fix": "eslint --fix src --ext ts",
    "compile": "tsc -p .",
    "build": "npm run compile",
    "test": "jest",
    "pretest": "npm run build",
    "posttest": "npm run lint"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules/",
      "build/"
    ]
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "overrides": [
      {
        "files": [
          "./src/gen1jpn/*.ts",
          "./src/gen1stadium/*.ts",
          "./src/gen2stadium2/*.ts",
          "./src/gen4pt/*.ts",
          "./src/gen5bw1/*.ts",
          "./src/gen6xy/*.ts",
          "./src/gen7letsgo/*.ts",
          "./src/gen7sm/*.ts",
          "./src/gen8bdsp/*.ts",
          "./src/gen8dlc1/*.ts"
        ],
        "rules": {
          "@typescript-eslint/quotes": "off",
          "@typescript-eslint/indent": [
            "error",
            "tab",
            {
              "flatTernaryExpressions": true
            }
          ],
          "@typescript-eslint/no-unused-vars": "off",
          "max-len": "off",
          "operator-linebreak": "off"
        }
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/xerxicodex/ps/issues"
  },
  "homepage": "https://github.com/xerxicodex/ps#readme"
}
